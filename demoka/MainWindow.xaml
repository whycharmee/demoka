<Window x:Class="demoka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoka"
        mc:Ignorable="d"
               Title="Авторизация" MinHeight="300" MinWidth="400" SizeToContent="WidthAndHeight">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#DCDCDC	" Offset="0.0"/>
            <GradientStop Color="#008080" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   FontFamily="Bahnschrift"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Логин" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtUsername"
                     Margin="0, 5, 0, 10"
                     Height="35"
                     Background="#DCDCDC	"
                     BorderBrush="#008080	"  
                     BorderThickness="1"/>
            <TextBlock Text="Пароль" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtPassword"
                         Margin="0, 5, 0, 10"
                         Height="35"
                         Background="#DCDCDC"
                         BorderBrush="#008080	"  
                         BorderThickness="1"/>
            <Button Content="Войти"
                    Width="120"
                    Height="30"
                    Background="#008080	"
                    Foreground="#444"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Margin="0, 10, 0, 0"
                    BorderThickness="0"
                    Click="BtnLogin_Click"/>

        </StackPanel>

    </Grid>
</Window>
