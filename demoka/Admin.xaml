<Window x:Class="demoka.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoka"
        mc:Ignorable="d"
              Title="Панель администратора" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#708090" Offset="0.0"/>
            <GradientStop Color="#708090" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <DataGrid x:Name="Users" 
                  Margin="21,25,25,68" 
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  SelectionMode="Single"
                  SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" />
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" />
                <DataGridCheckBoxColumn Header="Заблокирован" Binding="{Binding IsBlocked}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить пользователя"
                Width="180"
                Background="#008080	"
                BorderBrush="#008080	"
                Foreground="#FFFFFF"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Cursor="Hand"
                Margin="67,0,0,25"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Click="BtnAddUser_Click" Height="28"/>

        <Button Content="Разблокировать"
                Width="180"
                Background="#008080	"
                 BorderBrush="#008080	"
                Foreground="#FFFFFF"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Cursor="Hand"
                Margin="0,381,0,0"
                VerticalAlignment="Top"
                BorderThickness="0"
                Click="BtnUnlock_Click" Height="28"/>

        <Button Content="Сохранить изменения"
                Width="180"
                Background="#008080	"
                 BorderBrush="##008080	"
                Foreground="#FFFFFF"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Cursor="Hand"
                Margin="562,0,0,25"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Click="BtnSaveChanges_Click" Height="28"/>
    </Grid>
</Window>
