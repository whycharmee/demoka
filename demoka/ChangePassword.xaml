<Window x:Class="demoka.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoka"
        mc:Ignorable="d"
                Title="Изменение пароля" MinHeight="350" MinWidth="400"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#708090	" Offset="0.0"/>
            <GradientStop Color="#708090	" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Акцент -->
        <SolidColorBrush x:Key="AccentBrush" Color="#DB7093"/>
        <!-- ваш DB7093 -->
        <SolidColorBrush x:Key="InputBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LabelBrush" Color="#4A2D36"/>
        <!-- тёмный контраст -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#008080	"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox" x:Key="PwdBoxStyle">
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="{StaticResource LabelBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Смена пароля"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource LabelBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,6,0,10"
                   FontFamily="Bahnschrift"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="360" HorizontalAlignment="Center">
            <!-- Текущий пароль -->
            <TextBlock Text="Текущий пароль" Style="{StaticResource LabelStyle}"/>
            <PasswordBox x:Name="txtCurrentPassword"
                         Style="{StaticResource PwdBoxStyle}"
                         Background="#DCDCDC	"
                         BorderBrush="#DCDCDC	"  
                         Margin="0,0,0,10"/>

            <!-- Новый пароль -->
            <TextBlock Text="Новый пароль" Style="{StaticResource LabelStyle}"/>
            <PasswordBox x:Name="txtNewPassword"
                         Background="#DCDCDC	"
                         BorderBrush="#DCDCDC		"  
                         Style="{StaticResource PwdBoxStyle}"
                         Margin="0,0,0,10"/>

            <!-- Подтверждение нового пароля -->
            <TextBlock Text="Подтверждение пароля" Style="{StaticResource LabelStyle}"/>
            <PasswordBox x:Name="txtConfirmPassword"
                          Background="#DCDCDC	"
                         BorderBrush="#008080	"  
                         Style="{StaticResource PwdBoxStyle}"
                         Margin="0,0,0,18"/>

            <!-- Кнопка "Изменить пароль" -->
            <Button Content="Изменить пароль"
                    Background="#008080	"
                    BorderBrush="#008080	" 
                    HorizontalAlignment="Center"
                    Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>